@model string
@using Blog.ViewModels

<form asp-controller="ApplicationRole" asp-action="DeleteApplicationRole" role="form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">"Delete Application Role"</h4>
    </div>
    <div class="modal-body form-horizontal">
        Are you sure you want to delete this role?
    </div>
    <div class="modal-footer">
        <button data-dismiss="modal" id="btn-cancel" class="btn btn-default" type="button">Cancel</button>
        <button class="btn btn-success" id="btn-submit" type="submit">Delete</button>
    </div>
</form>   